{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "pretty": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    },
    "lib": [
      "dom",
      "esnext",
      "scripthost"
    ],
    "typeRoots": [
      "types",
      "@node_modules/types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
